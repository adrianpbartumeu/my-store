@using Resources

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="col-lg-9 col-md-9">
        <div data-bind="foreach:products.electrical">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 products">
                <div class="top-box" >
                    <h3>Lorem ipsum dolor sit amet</h3>
                    <p>Lorem ipsum</p>
                    <div class="image">
                        <img src="@Url.Content("~/Images/Electrical/")" data-bind="appendToSRC:$data.type+'/'+$data.image" alt=" " class="enable-mask" />
                        <div class="mask">
                            <a data-bind="attr:{ href:''},click:electricalDetails">@Resources.Details</a>
                        </div>
                    </div>
                    <div class="price" data-bind="text:'$' +' '+($data.price - $data.reduce)">£480</div>
                    <ul class="list" data-bind="attr:{ href:''},click:addToCart">
                        <li>
                            <img src="@Url.Content("~/Images/Index/plus.png")" alt="" />
                            <ul>
                                <li>
                                    <a>@Resources.AddtoCart</a>
                                </li>
                                <li>
                                    <a class="details" data-bind="attr:{ href:''},click:electricalDetails">@Resources.Details</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="clear"></div>
        <div data-bind="foreach:products.meat">
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 products">
                <div class="top-box">
                    <h3>Lorem ipsum dolor sit amet</h3>
                    <p>Lorem ipsum</p>
                    <div class="image" >
                        <img src="@Url.Content("~/Images/Meat/")" data-bind="appendToSRC:$data.type+'/'+$data.image" alt=" " class="enable-mask" />
                        <div class="mask">
                            <a data-bind="attr:{ href:''},click:meatDetails">@Resources.Details</a>
                        </div>
                    </div>
                    <div class="price" data-bind="text:'$' +' '+($data.price - $data.reduce)">£480</div>
                    <ul class="list" data-bind="attr:{ href:''},click:addToCart">
                        <li>
                            <img src="@Url.Content("~/Images/Index/plus.png")" alt="" />
                            <ul>
                                <li>
                                    <a>@Resources.AddtoCart</a>
                                </li>
                                <li>
                                    <a class="details" data-bind="attr:{ href:''},click:meatDetails">@Resources.Details</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-3 ad">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <img src="@Url.Content("~/Images/Advertisement/ad1.jpg")" />
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <img src="@Url.Content("~/Images/Advertisement/ad2.jpg")" />
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <img src="@Url.Content("~/Images/Advertisement/ad3.jpg")" />
        </div>
    </div>
</div>


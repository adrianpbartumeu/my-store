@using Microsoft.AspNet.Identity
@using Resources
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm" }))//, @class = "navbar-right"
    {
    @Html.AntiForgeryToken()

        <li>
            @Html.ActionLink(Resources.Hello + " " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@Resources.Logoff</a></li>
    <li class="show-cart">
        <div>
            <img src="@Url.Content("~/Images/Index/cart.png")" class="my-cart" />
            <span data-bind="text: cartImportant.amount">4</span>
            
        </div>
        @Html.Partial("_Cart")
    </li>
    }
}
else
{
        <li>@Html.ActionLink(Resources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(Resources.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    <li class="show-cart">
        <div>
            <img src="@Url.Content("~/Images/Index/cart.png")" class="my-cart" />
            <span data-bind="text: cartImportant.amount">4</span>
           
        </div>
        @Html.Partial("_Cart")
    </li>
}

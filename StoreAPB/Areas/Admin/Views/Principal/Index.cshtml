
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/_Layout.cshtml";
}

<h2>Index</h2>
<a href="" data-bind="click:createClick">Create</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Provider</th>
            <th>Type</th>
            <th>Name</th>
            <th>Price</th>
            <th>Amount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- ko foreach: product.meats -->
        <tr role="row" class="odd">
            <td class="sorting_1" data-bind="text:$data.productid"></td>
            <td class="sorting_1" data-bind="text:$data.provider"></td>
            <td data-bind="text:$data.type"></td>
            <td data-bind="text:$data.name_p"></td>
            <td data-bind="text:($data.price - $data.reduce)"></td>
            <td data-bind="text:$data.amount"></td>
            <td>
                <i class="fa fa-edit"></i><a data-bind="attr:{ href:''},text:'Edit',click:editClick"></a>                   
                <i class="fa fa-file-text-o"></i><a data-bind="attr:{ href:''},text:'Details',click:detailClick"></a> 
                <i class="fa fa-trash"></i><a data-bind="attr:{ href:''},text:'Delete',click:deleteClick"></a> 
            </td>
        </tr>
        <!-- /ko -->
    </tbody>
</table>
<div data-bind="pagination: { currentPage: paging.page, totalCount: paging.total, pageSize: paging.pageSizes, maxPages: paging.maxPages, directions: paging.directions, boundary: paging.boundary, text: paging.pagingText },click:getMeat"></div>
@Html.Partial("_Load")
@Html.Partial("_CRUD_Meat")

@section scripts{
    @Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/knockoutadmin")
@Scripts.Render("~/bundles/jqueryval")
}



